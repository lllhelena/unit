extends layouts/default

block vars
	-
		const page = {
			title: 'index.html'
		};




block main
	section.section-simple-banner.oh
		.container
			.simple-banner
				.simple-banner__pic
					img(src="images/home-banner.jpg", alt="")
				.simple-banner__text
					h1.simple-banner__title Готовые модульные бани
					.simple-banner__desc С доставкой и установкой в Хабаровске или любом другом городе Дальнего Востока
					.simple-banner__btns
						a.btn.btn--orange.btn--hov-white-text(href="")  Записаться на консультацию

	section.section-catalog.oh
		.container
			.catalog-top
				.catalog-top__left
					h2.home-catalog-title Каталог
				.catalog-top__right
					.catalog-filter
						.catalog-filter__control.js-sort-control
							//'unset' || 'asc' || 'desc'
							.catalog-filter__direction.js-catalog-filter__direction(data-status="unset" data-index="-1")
							.catalog-filter__name.js-catalog-filter__name Фильтр
							.catalog-filter__icon
								include ../images/filter-icon.svg

						.catalog-filter__content
							.catalog-filter__title Сортировать по
							.sort-item.js-sort-item
								input.sort-item__inp-type(type="radio" name="sort-type" value="price")
								input.sort-item__inp-direction(type="checkbox" name="sort-asc-price" checked)
								.sort-item__direction
								.sort-item__name Цена
							.sort-item.js-sort-item
								input.sort-item__inp-type(type="radio" name="sort-type" value="area")
								input.sort-item__inp-direction(type="checkbox" name="sort-asc-area" checked)
								.sort-item__direction
								.sort-item__name Площадь
							.sort-item.js-sort-item
								input.sort-item__inp-type(type="radio" name="sort-type" value="number")
								input.sort-item__inp-direction(type="checkbox" name="sort-asc-number" checked)
								.sort-item__direction
								.sort-item__name Номер
							.sort-item.js-sort-item
								input.sort-item__inp-type(type="radio" name="sort-type" value="popular")
								input.sort-item__inp-direction(type="checkbox" name="sort-asc-popular" checked)
								.sort-item__direction
								.sort-item__name Популярное





			.catalog-cards
				each val in [1, 2, 3, 4, 5, 6]
					a.catalog-card(href="")
						.catalog-card__pic
							img(src="images/card_bg.jpg", alt="")
						.catalog-card__inner
							.catalog-card__name Название дома
							.catalog-card__price 1.018.600₽
							.catalog-card__feature Площадь 32 - 97 м²
							.catalog-card-attributes
								.catalog-card-attributes__col
									.catalog-card-attribute
										.catalog-card-attribute__icon
											img(src="images/product-card-icon-bed.svg", alt="")
										.catalog-card-attribute__name 2
									.catalog-card-attribute
										.catalog-card-attribute__icon
											img(src="images/product-card-icon-toilet.svg", alt="")
										.catalog-card-attribute__name 1
								.catalog-card-attributes__col
									.catalog-card-attribute
										.catalog-card-attribute__icon
											img(src="images/product-card-icon-home.svg", alt="")
										.catalog-card-attribute__name Крытая
									.catalog-card-attribute
										.catalog-card-attribute__icon
											img(src="images/product-card-icon-steps.svg", alt="")
										.catalog-card-attribute__name 1

							.catalog-card__fg

							.catalog-card__text-feature Этажей 2
							.catalog-card__text-feature Спален 1

							.catalog-card__btns
								.btn.btn--orange Подробнее